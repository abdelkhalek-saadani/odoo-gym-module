<odoo>


    <record id="gym_session_tree_view" model="ir.ui.view">
        <field name="name">view.gym.session.tree</field>
        <field name="model">gym.session</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="workout_id" />
                <field name="exercice_ids" widget="many2many_tags"/>
                <field name="formatted_date" />
                <field name="duration"/>
                <field name="note"/>
            </tree>

        </field>
    </record>

    <record id="gym_session_tree_view_related" model="ir.ui.view">
        <field name="name">view.gym.session.tree.related</field>
        <field name="model">gym.session</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="exercice_ids" widget="many2many_tags"/>
                <field name="formatted_date"/>
                <field name="duration"/>
                <field name="note"/>
            </tree>

        </field>
    </record>

    <record id="gym_session_form_view" model="ir.ui.view">
        <field name="name">view.gym.session.form</field>
        <field name="model">gym.session</field>
        <field name="arch" type="xml">
            <form string="sessions">
                <group>
                    <field name="name"/>
                    <field name="workout_id" readonly="1"/>
                    <field name="exercice_ids"/>
                    <field name="date"/>
                    <field name="duration"/>
                    <field name="note"/>
                </group>
            </form>

        </field>
    </record>

    <record id="action_gym_session" model="ir.actions.act_window">
        <field name="name">session</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">gym.session</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="gym_session_tree_view"/>
        <!--<field name="views">[('gym_session_tree_view_related','tree')]</field>-->
    </record>

    <menuitem id="menu_gym_session"
              name="sessions"
              sequence="20"
              parent="menu_gym_root"
              action="action_gym_session"
    />
</odoo>